<div class="vagabond chat-card check-result {{resultType}}">
  <div class="card-header">
    <h3>{{label}}</h3>
  </div>
  
  <div class="card-content">
    <div class="roll-info">
      <div class="roll-detail">
        <span class="label">Target:</span>
        <span class="value difficulty">{{difficulty}}</span>
      </div>
      <div class="roll-detail">
        <span class="label">Result:</span>
        <span class="value total">{{total}}</span>
      </div>
    </div>
    
    <div class="result-banner {{resultType}}">
      {{#if isCrit}}
        <i class="fas fa-star"></i> <strong>CRITICAL SUCCESS!</strong> <i class="fas fa-star"></i>
      {{else if (eq resultType "pass")}}
        <i class="fas fa-check-circle"></i> <strong>Success!</strong>
      {{else}}
        <i class="fas fa-times-circle"></i> <strong>Failure</strong>
      {{/if}}
    </div>
  </div>
</div>
