<div class="vagabond chat-card spell-cast">
  <div class="card-header">
    <h3><i class="fas fa-magic"></i> {{spell.name}}</h3>
  </div>
  
  <div class="card-content">
    <div class="spell-info">
      <div class="spell-detail">
        <span class="label">Delivery:</span>
        <span class="value">{{delivery}}</span>
      </div>
      {{#if manaCost}}
      <div class="spell-detail">
        <span class="label">Mana Cost:</span>
        <span class="value mana-cost">{{manaCost}}</span>
      </div>
      {{/if}}
    </div>
    
    {{#if effect}}
    <div class="spell-effect">
      <strong>Effect:</strong>
      <p>{{effect}}</p>
    </div>
    {{/if}}
    
    {{#if damageRoll}}
    <div class="spell-damage">
      <i class="fas fa-burst"></i> <strong>Damage Roll Included</strong>
    </div>
    {{/if}}
  </div>
</div>
