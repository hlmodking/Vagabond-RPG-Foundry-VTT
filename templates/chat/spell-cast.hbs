<div class="vagabond spell-cast-card">
  <div class="spell-header">
    <h3>{{spell.name}}</h3>
  </div>
  
  <div class="spell-details">
    <div class="detail-row">
      <strong>Delivery:</strong>
      <span>{{delivery}}</span>
    </div>
    
    {{#if manaCost}}
    <div class="detail-row">
      <strong>Mana Cost:</strong>
      <span class="mana-cost">{{manaCost}}</span>
    </div>
    {{/if}}
    
    {{#if effect}}
    <div class="detail-row effect-row">
      <strong>Effect:</strong>
      <div class="effect-text">{{effect}}</div>
    </div>
    {{/if}}
    
    {{#if damageRoll}}
    <div class="detail-row damage-row">
      <strong>Damage:</strong>
      <span class="damage-value">{{damageRoll.total}}</span>
    </div>
    {{/if}}
  </div>
</div>
