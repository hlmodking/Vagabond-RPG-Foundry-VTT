<form class="{{cssClass}} flexcol" autocomplete="off">
  
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile" src="{{item.img}}" data-action="showImage" title="{{item.name}}" alt="{{item.name}}"/>
    
    <div class="header-details flexcol">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Armor Name"/>
      </h1>
      
      <div class="item-subtitle">
        <i class="fas fa-shield-alt"></i> Armor
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    
    <h2>Armor Properties</h2>
    
    <div class="form-group">
      <label>Armor Type</label>
      <select name="system.type">
        {{#select system.type}}
        <option value="light">Light Armor</option>
        <option value="medium">Medium Armor</option>
        <option value="heavy">Heavy Armor</option>
        {{/select}}
      </select>
      <p class="hint">The weight class of this armor</p>
    </div>
    
    <div class="armor-stats-grid">
      <div class="form-group">
        <label>Armor Rating</label>
        <input type="number" name="system.rating" value="{{system.rating}}" data-dtype="Number" min="1" max="3"/>
        <p class="hint">Protection value (1-3)</p>
      </div>
      
      <div class="form-group">
        <label>Might Requirement</label>
        <input type="number" name="system.mightReq" value="{{system.mightReq}}" data-dtype="Number" min="2" max="7"/>
        <p class="hint">Minimum Might stat needed</p>
      </div>
    </div>

    <h3>Armor Type Guidelines</h3>
    <div class="armor-type-info">
      <div class="armor-type-card light">
        <h4><i class="fas fa-tshirt"></i> Light Armor</h4>
        <div class="armor-details">
          <span class="rating">Rating: 1</span>
          <span class="might">Might: 3</span>
        </div>
        <p class="armor-desc">Padded cloth, leather jerkins, light mail</p>
      </div>
      
      <div class="armor-type-card medium">
        <h4><i class="fas fa-user-shield"></i> Medium Armor</h4>
        <div class="armor-details">
          <span class="rating">Rating: 2</span>
          <span class="might">Might: 4</span>
        </div>
        <p class="armor-desc">Chain mail, scale armor, breastplates</p>
      </div>
      
      <div class="armor-type-card heavy">
        <h4><i class="fas fa-shield"></i> Heavy Armor</h4>
        <div class="armor-details">
          <span class="rating">Rating: 3</span>
          <span class="might">Might: 5</span>
        </div>
        <p class="armor-desc">Full plate armor, heavy mail</p>
      </div>
    </div>

    <h3>Physical Properties</h3>
    
    <div class="inventory-grid">
      <div class="form-group">
        <label>Inventory Slots</label>
        <input type="number" name="system.slots" value="{{system.slots}}" data-dtype="Number" min="1"/>
        <p class="hint">Space taken in inventory</p>
      </div>
      
      <div class="form-group">
        <label>Quantity</label>
        <input type="number" name="system.quantity" value="{{system.quantity}}" data-dtype="Number" min="1"/>
        <p class="hint">Number of items</p>
      </div>
    </div>

    <h3>Value</h3>
    
    <div class="currency-grid">
      <div class="form-group">
        <label><i class="fas fa-coins"></i> Gold</label>
        <input type="number" name="system.price.gold" value="{{system.price.gold}}" data-dtype="Number" min="0"/>
      </div>
      
      <div class="form-group">
        <label><i class="fas fa-coins"></i> Silver</label>
        <input type="number" name="system.price.silver" value="{{system.price.silver}}" data-dtype="Number" min="0"/>
      </div>
      
      <div class="form-group">
        <label><i class="fas fa-coins"></i> Copper</label>
        <input type="number" name="system.price.copper" value="{{system.price.copper}}" data-dtype="Number" min="0"/>
      </div>
    </div>

    <h3>Description</h3>
    <div class="editor">
      {{editor enrichedDescription target="system.description" button=true editable=editable}}
    </div>

  </section>
</form>
